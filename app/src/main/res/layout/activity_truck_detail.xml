<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kovalenko.teledrive.activity.TruckDetailActivity">

    <LinearLayout
        android:id="@+id/edit_truck_layout"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_field_truck_brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:hint="Brand"
            android:maxLines="1"
            android:scrollHorizontally="false"
            android:singleLine="true"
            android:focusable="false"/>

        <EditText
            android:id="@+id/edit_field_truck_model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:hint="Model"
            android:maxLines="1"
            android:scrollHorizontally="false"
            android:singleLine="true"
            android:focusable="false"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/edit_truck_years_layout"
        android:layout_below="@+id/edit_truck_layout"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <NumberPicker
            android:id="@+id/edit_traktor_year_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="72dp"
            />

        <NumberPicker
            android:id="@+id/edit_reefer_year_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="72dp"
           />
    </RelativeLayout>
</RelativeLayout>
