<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.newactivity.NewDriverActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/card_driver_names"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="35dp"
        android:elevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/driver_first_name_label"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:text="First name:" />

            <EditText
                android:id="@+id/input_first_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/driver_first_name_label"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="13dp"
                android:layout_toEndOf="@id/driver_first_name_label"
                android:clickable="false"
                android:hint="First name"
                android:inputType="text"
                android:maxLines="1"
                android:scrollHorizontally="false"
                android:singleLine="true"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/driver_second_name_label"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_below="@id/driver_first_name_label"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:text="Second name:" />

            <EditText
                android:id="@+id/input_second_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/driver_second_name_label"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/driver_second_name_label"
                android:clickable="false"
                android:hint="Second name"
                android:inputType="text"
                android:maxLines="1"
                android:scrollHorizontally="false"
                android:singleLine="true"
                android:textAlignment="center" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_driver_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_driver_names"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:elevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="15dp">

            <TextView
                android:id="@+id/driver_date_label"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:text="Birth date:" />

            <EditText
                android:id="@+id/input_driver_date"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_alignBottom="@+id/driver_date_label"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="74dp"
                android:inputType="date"
                android:textAlignment="center" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/button_pick_driver_date"
                android:layout_below="@+id/driver_date_label"
                android:layout_centerHorizontal="true"
                android:text="Pick date"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

