<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/truck_layout"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/field_truck_brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:hint="Brand"
            android:maxLines="1"
            android:scrollHorizontally="false"
            android:singleLine="true" />

        <EditText
            android:id="@+id/field_truck_model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:hint="Model"
            android:maxLines="1"
            android:scrollHorizontally="false"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/truck_years_layout"
        android:layout_below="@+id/truck_layout"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <NumberPicker
            android:layout_weight="0.5"
            android:id="@+id/traktor_year_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <NumberPicker
            android:layout_weight="0.5"
            android:id="@+id/reefer_year_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_submit_truck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:src="@drawable/common_google_signin_btn_icon_dark"/>
</RelativeLayout>